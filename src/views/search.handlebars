<main>
    <div id="search" class="search">
        <h1 id="search_title">Search Reports</h1>
        <form id="search_form" action="/search/" method="POST">
            <label for="target">Search by: </label>
            <select id="target" class="target" name="target">
                <option value="title">Title</option>
                <option value="crime">Crime Type</option>
            </select>
            <br>
            <label for="keyword" id="keyword_label">Keyword: </label>
            <input type="text" name="keyword" id="keyword">
            <br>
            <button type="submit" id="submit_button">Submit</button>
        </form>
        <p>To browse reports by ZIP code instead, <a href="/map" id="map_link">click here</a>.</p>
        <div id="error_block">
            <p id="error" class="error">{{error}}</p>
        </div>
        <div id="result_block">
            <ol class="result-list">
                {{#each report}}
                <li class="result-report">
                    <a href="/reports/{{this._id}}" class="report-link">{{this.title}}</a>
                    <br>
                    <p>{{this.desc}}</p>
                </li>
                {{/each}}
            </ol>
        </div>
    </div>
</main>
<script src="/public/js/search.js"></script>