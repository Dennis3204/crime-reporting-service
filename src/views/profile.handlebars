<main>
    <h1>Your Profile</h1>

    <section class="profile-summary">
        <h2>{{user.first_name}} {{user.last_name}}</h2>
        <p><strong>Username:</strong> {{user.username}}</p>

        <h3>Your Reports</h3>
        {{#if reports.length}}
          <ul>
            {{#each reports}}
              <li>
                <a href="/reports/{{_id}}">{{title}}</a>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <p>You have not submitted any reports yet.</p>
        {{/if}}
    </section>

    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}

    {{#if success}}
        <p class="success">{{success}}</p>
    {{/if}}

    <form action="/profile" method="POST">

        <h3>Location Information</h3>

        <label for="area">Neighborhood / Area</label>
        <input type="text" id="area" name="area" value="{{user.location.area}}" required>

        <label for="city">City</label>
        <input type="text" id="city" name="city" value="{{user.location.city}}" required>

        <label for="state">State</label>
        <input type="text" id="state" name="state" value="{{user.location.state}}" required>

        <label for="zipcode">ZIP Code</label>
        <input type="text" id="zipcode" name="zipcode" value="{{user.location.zipcode}}" required pattern="\d{5}">

        <button type="submit">Save & Update</button>
    </form>

    <form action="/logout" method="GET" class="logout-form">
  <button type="submit">Logout</button>
    </form>
</main>
