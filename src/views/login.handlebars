<main>
    <h1>Login</h1>
     <p id="client-error" class="error"></p>
    {{#if error}}
        <p class="error">{{error}}</p>
    {{/if}}

    <form action="/login" method="POST" id="login-form">
        <label for="username">Username: </label>
        <input type="text" name="username" id="username" required minlength="3" maxlength="20" pattern="(?=.*[A-Za-z])[A-Za-z0-9]{3,20}" title="3–20 characters, letters/numbers only, must include at least one letter." aria-describedby="username-hint">
        <div id="username-hint" class="hint">3–20 characters, letters/numbers only, must include at least one letter.</div>
        <br>
        <label for="password">Password: </label>
        <input type="password" name="password" id="password" required minlength="8" pattern="(?=.*[A-Za-z])(?=.*[0-9]).{8,}" title="At least 8 characters and must include at least one letter and one number." aria-describedby="password-hint">
        <div id="password-hint" class="hint">At least 8 characters and must include at least one letter and one number.</div>
        <br>
        <button type="submit">Login</button>
    </form>

    <p>Don't have an account? <a href="/signup">Sign up here</a></p>

    <script src="/public/js/login.js"></script>
</main>
