<main class="create-report-page">
  <h1>Create a Crime Report</h1>

  {{#if error}}
    <p class="error">{{error}}</p>
  {{/if}}

  <form
    action="/reports"
    method="POST"
    enctype="multipart/form-data"
    id="report-form"
  >
    <div>
      <label for="title">Title*</label>
      <input type="text" id="title" name="title" required value="{{prefill.title}}">
    </div>

    <div>
      <label for="desc">Description*</label>
      <textarea id="desc" name="desc" required>{{prefill.desc}}</textarea>
    </div>

    <div>
      <label for="crime">Crime Type*</label>
      <input type="text" id="crime" name="crime" required value="{{prefill.crime}}">
    </div>

    <fieldset>
      <legend>Location*</legend>

      <div>
        <label for="state">State</label>
        <input id="state" name="state" required value="{{prefill.state}}">
      </div>

      <div>
        <label for="city">City</label>
        <input id="city" name="city" required value="{{prefill.city}}">
      </div>

      <div>
        <label for="area">Neighborhood / Area</label>
        <input id="area" name="area" required value="{{prefill.area}}">
      </div>

      <div>
        <label for="zipcode">ZIP Code*</label>
        <input
          type="text"
          id="zipcode"
          name="zipcode"
          required
          pattern="\d{5}"
          title="5-digit ZIP code"
          value="{{prefill.zipcode}}"
        >
      </div>
    </fieldset>

    <div>
      <label for="photos">Photos (optional)</label>
      <input type="file" id="photos" name="photos" accept="image/*" multiple>
    </div>

    <div class="checkbox-field">
      <label>
        <input type="checkbox" name="anonymous" {{#if prefill.anonymous}}checked{{/if}}>
        Post as anonymous
      </label>
    </div>

    <button type="submit">Submit Report</button>
  </form>
  <a href="/" class="back-button">‚Üê Back to Home</a>
</main>
